<Page
    x:Class="SkiaRate.Samples.Uwp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SkiaRate.Samples.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:skiarate="using:SkiaRate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <skiarate:RatingView x:Name="starRatingView" />
        <skiarate:RatingView x:Name="favRatingView" Count="4" ColorOn="#F44336"  Grid.Row="1"/>
        <skiarate:RatingView x:Name="moviesRatingView" ColorOn="#3F51B5" Value="2.0"  Grid.Row="2" />
    </Grid>
</Page>
